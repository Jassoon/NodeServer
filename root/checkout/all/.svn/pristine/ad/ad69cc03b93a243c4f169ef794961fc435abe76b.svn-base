function render() {
	if(step == 0) {
		$("#btn").addClass('talk_btn_qian').removeClass('talk_btn_fang').removeClass('talk_btn_zhong').removeClass('talk_btn_hou');
	} else if(step == 1) {
		$("#btn").addClass('talk_btn_zhong').removeClass('talk_btn_qian');
		//btn.value = '正在录音！......';
	} else if(step == 2) {
		$("#btn").addClass('talk_btn_hou').removeClass('talk_btn_zhong');
		//btn.value = '播放！';
	} else if(step == 3) {
		$("#btn").addClass('talk_btn_fang').removeClass('talk_btn_hou');
		//btn.value = '正在播放！......';
	}
}


